<UserControl x:Class="custom_weather.WeatherSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:custom_weather"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             d:DesignHeight="300" d:DesignWidth="465" MouseDown="UserControl_MouseDown">
    <DockPanel Margin="20,20,20,20">
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition MinHeight="200" Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" TextAlignment="Right" Text="Home Town:" Margin="0,0,5,0"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="HomeTownText" MinWidth="100" Width="Auto" MaxWidth="300" Padding="0,0,5,0" Keyboard.KeyDown="HomeTown_KeyDown" LostKeyboardFocus="HomeTown_LostKeyboardFocus"/>
                <TextBlock x:Name="HomeTownInfo" Text="(?)" TextAlignment="Center" Width="20" Foreground="Blue"/>
            </StackPanel>
        </Grid>
        <Grid DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <TextBlock FontSize="10" TextWrapping="Wrap">
                This plugin uses the free and open-source API from Open-Meteo to retrieve Weather Data. Read their Terms of Use before using this plugin: 
                <Hyperlink NavigateUri="https://open-meteo.com/en/terms" RequestNavigate="Hyperlink_RequestNavigate">
                    https://open-meteo.com/en/terms
                </Hyperlink>
            </TextBlock>
        </Grid>
    </DockPanel>
</UserControl>
